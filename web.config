<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Reverse Proxy Rule: Apuntando a tu puerto correcto -->
        <rule name="ReverseProxyInboundRule1" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:14987/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Intercepción de caída (PM2 Apagado/Building) -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <!-- Capturamos Error 502 (Bad Gateway), que es el que lanza IIS cuando PM2 no responde -->
      <remove statusCode="502" subStatusCode="-1" />
      <!-- responseMode="File" es la clave: lee el archivo directamente sin pasar por las reglas de proxy, evitando el Error 500 -->
      <error statusCode="502" path="public\updating.html" responseMode="File" />
    </httpErrors>

    <!-- Tus headers originales -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="no-cache" />
        <add name="Pragma" value="no-cache" />
        <add name="Expires" value="-1" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>